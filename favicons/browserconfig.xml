<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/favicons/mstile-70x70.png"/>
            <square150x150logo src="/favicons/mstile-150x150.png"/>
            <square310x310logo src="/favicons/mstile-310x310.png"/>
            <wide310x150logo src="/favicons/mstile-310x150.png"/>
            <TileColor>#FF5F15</TileColor>
            <TileImage src="/favicons/mstile-150x150.png"/>
        </tile>
        <notification>
            <polling-uri src="notifications/get"/>
            <frequency>30</frequency>
            <cycle>1</cycle>
        </notification>
        <badge>
            <polling-uri src="notifications/badge"/>
            <frequency>30</frequency>
        </badge>
    </msapplication>
</browserconfig> 